{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "useDefineForClassFields": true,
    // For use map
    "downlevelIteration": true,
    // Strict type-checking
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "node",
    ],
    "paths": {
      "@/*": ["./src/*"],
      "tests/*": ["./tests/*"]
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "scripthost",
      "WebWorker"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ]
}
